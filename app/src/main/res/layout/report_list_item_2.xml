<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name_txv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ladislao" />

        <LinearLayout
            android:id="@+id/date_lrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/label_date_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: " />

            <TextView
                android:id="@+id/date_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/label_movement_txv"
                android:text="5"
                android:textSize="12sp" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/sede_txv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/movement_lrl"
            android:text="digital" />


        <LinearLayout
            android:id="@+id/movement_lrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_movement_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimiento: " />

            <TextView
                android:id="@+id/movement_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="3:40" />

        </LinearLayout>
    </TableRow>

</LinearLayout>